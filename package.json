  "repository": {
    "url": "https://github.com/Unbuttun/fastify-slonik",
    "type": "git"
  },
  "scripts": {
    "build": "node src/utils/build.js",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "test": "tsc -p tsconfig.test.json && tap --100 -j1 -R classic build/src/test/index.test.js"
